<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
        <service id="ev_basicHighcharts.services" class="EV\HighchartsBundle\Services\BasicHighcharts" scope="request">
            <argument type="service" id="ev_highchartsThemes.services" />
        </service>
        <service id="ev_highchartsThemes.services" class="EV\HighchartsBundle\Services\Themes" scope="request">
            <argument type="service" id="request" />
            <argument type="service" id="service_container" />
        </service>
        <service id="ev.twig.highcharts_extension" class="EV\HighchartsBundle\Twig\HighchartsTwigExtension">
            <tag name="twig.extension" />
        </service>
    </services>
   
</container>
